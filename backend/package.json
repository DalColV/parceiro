{
  "name": "backend",
  "version": "1.0.0",
  "description": "Backend para gerenciador de tarefas",
  "main": "src/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "ts-node src/index.js",
    "build": "tsc",
    "typeorm": "typeorm-ts-node-commonjs",
    "migration:run": "typeorm-ts-node-commonjs migration:run -d src/data-source.js",
    "migration:revert": "typeorm-ts-node-commonjs migration:revert -d src/data-source.js",
    "migration:generate": "typeorm-ts-node-commonjs migration:generate src/migrations/ -d src/data-source.js"
  },
  "dependencies": {
    "fastify": "^4.28.1",
    "@fastify/cors": "^9.0.1",
    "typeorm": "^0.3.20",
    "pg": "^8.12.0",
    "reflect-metadata": "^0.2.2"
  },
  "devDependencies": {
    "typescript": "^5.5.4",
    "ts-node": "^10.9.2",
    "@types/node": "^20.14.10"
  }
}
